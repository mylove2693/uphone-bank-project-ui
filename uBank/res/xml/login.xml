<?xml version="1.0" encoding="utf-8"?>
<!-- 用户登陆Activity 布局 -->
<RelativeLayout
android:id="@+id/userLoginLayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<!-- 登录表 -->
<TableLayout
	android:id="@+id/loginbox"
	android:layout_width = "440px"
	android:layout_height = "360px"
	android:layout_marginTop = "50px"
	android:layout_marginLeft = "20px"
	android:background = "@drawable/loginbg">
	<TableLayout
		android:layout_below="@+id/loginTextLayout">
		<TableRow>
			<TextView
				android:id="@+id/loginText"
				android:layout_width = "440px"
				android:layout_height = "80px"
				android:text = "手机用户登录"
				android:textSize = "40px"
				android:textColor = "#ffffff"
				android:gravity = "center"></TextView>
		</TableRow>
	</TableLayout>
	<TableRow>
		<TableLayout		
			android:layout_marginLeft = "30px">
			<TableRow
				android:gravity = "center">
				<TextView
					android:id="@+id/nameText"
					android:layout_width = "wrap_content"
					android:layout_height = "75px"
					android:textSize = "24px"
					android:textColor = "#000000"
					android:text = "用户名： "
					android:gravity = "center_vertical"></TextView>
				<EditText
					android:id="@+id/nameEdit"
					android:layout_width = "280px"
					android:layout_height = "50px"
					android:layout_gravity = "center_vertical"
					android:textSize = "20px"></EditText>
			</TableRow>
			<TableRow
				android:gravity = "center">
				<TextView
					android:id="@+id/passwdText"
					android:layout_width = "wrap_content"
					android:layout_height = "72px"
					android:textSize = "24px"
					android:textColor = "#000000"
					android:text = "密码：  "					
					android:gravity = "center_vertical"></TextView>
				<EditText
					android:id="@+id/passwdEdit"
					android:layout_width = "280px"
					android:layout_height = "50px"
					android:password = "true"
					android:textSize = "20px"></EditText>
			</TableRow>
		</TableLayout>
	</TableRow>
	<TableRow>
		<TableLayout>
			<TableRow>
				<TextView
					android:id="@+id/pyramidText"
					android:layout_width = "wrap_content"
					android:layout_height = "72px"
					android:textSize = "24px"
					android:textColor = "#000000"
					android:text = "附加码： "	
					android:layout_marginLeft = "30px"				
					android:gravity = "center_vertical"></TextView> 
				<EditText
					android:id="@+id/pyramidEdit"
					android:layout_width = "120px"
					android:layout_height = "50px"
					android:layout_gravity = "center_vertical"
					android:textSize = "20px"></EditText>			
				<TextView
					android:id="@+id/extraCode"
					android:layout_width = "120px"
					android:layout_height = "40px"
					android:textSize = "30px"
					android:textColor = "#000000"
					android:paddingLeft = "30px"
					android:paddingBottom = "5px"
					android:background = "#808080ff"
					android:layout_gravity = "center_vertical"
					android:layout_marginLeft = "40px"></TextView>
			</TableRow>
		</TableLayout>
	</TableRow>
	<TableRow>
		<TableLayout>
			<CheckBox
				android:id="@+id/notesPasswdCheckBox"
				android:layout_width="fill_parent"
				android:layout_height="72px"
				android:text="记下登录名"
				android:textStyle="bold"
				android:gravity="center"
				android:layout_span="3"
				android:textSize="24px"
				android:textColor = "#000000"
				android:layout_marginLeft = "90px"
				></CheckBox>
		</TableLayout>
	</TableRow>
</TableLayout>
<Button
android:id="@+id/userLogin"
android:layout_width="170px"
android:layout_height="60px"
android:textSize = "32px"
android:layout_below="@id/loginbox"
android:layout_marginTop = "25px"
android:layout_marginLeft = "155px"

android:text="登录"
/>
</RelativeLayout>

