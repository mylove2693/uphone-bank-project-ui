<?xml version="1.0" encoding="utf-8"?>
	<!-- 首选账户 布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<!-- 当前首选账户 -->
	<include android:id="@+id/txt_one" layout="@xml/text_view_20"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="10dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
<!-- 白线 -->
<!-- 重新选择首选账户-->
	<include layout="@xml/white_line" />
	<include android:id="@+id/txt_two" layout="@xml/text_view_20"
		android:layout_marginLeft="10dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
<!-- 白线 -->
	<include layout="@xml/white_line" />
	<include android:id="@+id/spinner_one" layout="@xml/spinner"
		android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
<!-- 白线 -->
	<include layout="@xml/white_line" />
<!-- 按钮 -->
	<include android:id="@+id/ok_btn" layout="@xml/button"
		android:layout_marginTop="30dip" android:layout_gravity="center_horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>