<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:gravity="center_vertical|center_horizontal">

	<TextView android:id="@+id/lock_tv_tip" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"
		android:text="手机银行锁定状态\n请输入密码解锁：" />

	<EditText android:id="@+id/lock_et_pwd" android:layout_height="wrap_content"
		android:layout_width="250dip" android:password="true" />
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<Button android:id="@+id/lock_btn_ok" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="解锁"
			android:layout_gravity="left" />
		<Button android:id="@+id/lock_btn_exit" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="退出程序"
			android:layout_gravity="right" />
	</LinearLayout>
</LinearLayout>
