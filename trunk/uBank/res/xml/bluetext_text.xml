<?xml version="1.0" encoding="utf-8"?>
	<!--
适配器内部的样式
左边是一个蓝色字体的文本框
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="35dip"
	android:orientation="horizontal">
	<TextView android:id="@+id/blue_data_txt1"
		android:layout_marginLeft="15dip" android:textSize="18dip"
		android:layout_gravity="center_vertical" android:layout_width="150dip"
		android:textColor="#253e81" android:layout_height="wrap_content">
	</TextView>
	<TextView android:id="@+id/data_txt2" android:layout_width="140dip"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical"
		android:paddingTop="6dip" android:singleLine="true" android:textColor="#000000"
		android:textSize="18dip" />
</LinearLayout>
