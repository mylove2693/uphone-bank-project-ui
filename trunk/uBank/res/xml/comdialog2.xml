<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
<TextView
	android:id="@+id/tv_comdlog_title"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="15dip"
	android:textSize="16dip"
	android:text="提示信息："
	/>
<TextView
	android:layout_width="250dip"
	android:layout_height="1dip"
	android:layout_margin="2dip"
	android:background="#FFAAAAAA"
	/>
<TextView
	android:id="@+id/tv_comdlog_con1"
	android:layout_width="wrap_content"
	android:layout_height="80dip"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"
	android:text="content1"
	/>
<TextView
	android:id="@+id/tv_comdlog_con2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"
	android:text="content2"
	android:visibility="gone"
	/>
	<!-- 密码，一般不可见 -->
	<TextView android:id="@+id/act_tv_pwd" android:layout_width="match_parent" android:layout_height="wrap_content" 
	android:text="请输入密码" android:visibility="gone" android:textSize="16dip"></TextView>
	<EditText android:id="@+id/act_et_pwd" android:layout_width="match_parent" android:layout_height="wrap_content" 
	android:visibility="gone" android:password="true"></EditText>
	
<TextView
	android:layout_width="fill_parent"
	android:layout_height="1dip"
	android:layout_margin="2dip"
	android:background="#FFAAAAAA"
	/>
<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	>
<Button
	android:id="@+id/btn_comdlog_ok"
	android:layout_width="80dip"
	android:layout_marginLeft="60dip"
	android:layout_height="40dip"
	android:text="OK"
	/>
<Button
	android:id="@+id/btn_comdlog_cancel"
	android:layout_width="80dip"
	android:layout_height="40dip"
	android:layout_marginLeft="20dip"
	android:text="Cancel"
	/>
</LinearLayout>
</LinearLayout>